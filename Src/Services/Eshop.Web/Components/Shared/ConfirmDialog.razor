@if (IsVisible)
{
    <div class="confirm-backdrop">
        <div class="confirm-dialog">
     <div class="confirm-icon @IconClass">
   @IconSymbol
 </div>
    <h3 class="confirm-title">@Title</h3>
          <p class="confirm-message">@Message</p>
            <div class="confirm-actions">
         <button class="btn btn-secondary" @onclick="Cancel">@CancelText</button>
      <button class="btn @ConfirmButtonClass" @onclick="Confirm">@ConfirmText</button>
            </div>
     </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public string Title { get; set; } = "Confirm Action";
    [Parameter] public string Message { get; set; } = "Are you sure you want to proceed?";
    [Parameter] public string ConfirmText { get; set; } = "Confirm";
    [Parameter] public string CancelText { get; set; } = "Cancel";
    [Parameter] public string Type { get; set; } = "warning"; // warning, danger, info, success
    [Parameter] public EventCallback<bool> OnResult { get; set; }

    private string IconClass => Type switch
    {
        "danger" => "icon-danger",
        "success" => "icon-success",
   "info" => "icon-info",
        _ => "icon-warning"
    };

    private string IconSymbol => Type switch
    {
        "danger" => "?",
        "success" => "?",
        "info" => "?",
    _ => "?"
    };

    private string ConfirmButtonClass => Type switch
    {
      "danger" => "btn-danger",
        "success" => "btn-success",
        "info" => "btn-primary",
      _ => "btn-warning"
    };

    private async Task Confirm()
    {
        IsVisible = false;
        await OnResult.InvokeAsync(true);
    }

    private async Task Cancel()
    {
        IsVisible = false;
        await OnResult.InvokeAsync(false);
    }
}

