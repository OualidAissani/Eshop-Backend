@using Eshop.Web.Models
@using Eshop.Web.Components.Shared

<div class="categories-management">
    <div class="section-header">
        <h2>Categories Management</h2>
   <button class="btn btn-primary" @onclick="OpenAddCategoryModal">
 <span>?</span> Add Category
        </button>
    </div>

    <div class="search-box">
        <span class="search-icon">??</span>
        <input type="text" @bind="searchQuery" @bind:event="oninput" placeholder="Search categories..." />
    </div>

    <div class="categories-grid">
 @foreach (var category in FilteredCategories)
        {
       <div class="category-card">
            <div class="category-icon">
      @if (!string.IsNullOrEmpty(category.IconUrl))
        {
            <img src="@category.IconUrl" alt="@category.Name" />
         }
else
           {
        <span>???</span>
   }
        </div>
                <div class="category-info">
         <h3>@category.Name</h3>
  <p>@category.Description</p>
          <div class="category-meta">
            <span class="product-count">?? @category.ProductCount products</span>
           </div>
        </div>
                <div class="category-actions">
    <button class="btn-icon" @onclick="() => EditCategory(category)" title="Edit">??</button>
 <button class="btn-icon btn-danger" @onclick="() => ConfirmDeleteCategory(category)" title="Delete">???</button>
         </div>
    </div>
        }
    </div>

    @if (!FilteredCategories.Any())
    {
        <div class="empty-state">
         <div class="empty-icon">??</div>
            <h3>No categories found</h3>
            <p>@(string.IsNullOrEmpty(searchQuery) ? "Start by adding your first category" : "Try a different search term")</p>
        </div>
    }
</div>

<Modal IsVisible="@showCategoryModal" Title="@(isEditMode ? "Edit Category" : "Add Category")" Size="medium" OnClose="CloseCategoryModal">
    <Body>
        <div class="modal-form">
            <div class="form-group">
   <label>Category Name</label>
 <input type="text" @bind="currentCategory.Name" class="form-control" placeholder="Enter category name" />
  </div>

         <div class="form-group">
       <label>Description</label>
 <textarea @bind="currentCategory.Description" class="form-control" rows="3" placeholder="Enter category description"></textarea>
            </div>

            <div class="form-group">
       <label>Icon URL (optional)</label>
      <input type="text" @bind="currentCategory.IconUrl" class="form-control" placeholder="https://..." />
       @if (!string.IsNullOrEmpty(currentCategory.IconUrl))
  {
         <div class="icon-preview">
    <img src="@currentCategory.IconUrl" alt="Icon preview" />
  </div>
 }
 </div>
        </div>
    </Body>
    <FooterContent>
        <button class="btn btn-secondary" @onclick="CloseCategoryModal">Cancel</button>
        <button class="btn btn-primary" @onclick="SaveCategory">
            @(isEditMode ? "Update" : "Create") Category
        </button>
    </FooterContent>
</Modal>

<ConfirmDialog 
    IsVisible="@showDeleteConfirm" 
    Title="Delete Category" 
    Message="@($"Are you sure you want to delete '{categoryToDelete?.Name}'? Products in this category will not be deleted.")"
Type="danger"
    ConfirmText="Delete"
    CancelText="Cancel"
    OnResult="HandleDeleteConfirm" />

@code {
    private List<Category> categories = new()
  {
    new Category { Id = 1, Name = "Electronics", Description = "Electronic devices and accessories", IconUrl = "https://via.placeholder.com/64", ProductCount = 156 },
        new Category { Id = 2, Name = "Clothing", Description = "Fashion and apparel", IconUrl = "https://via.placeholder.com/64", ProductCount = 234 },
        new Category { Id = 3, Name = "Books", Description = "Books and educational materials", IconUrl = "https://via.placeholder.com/64", ProductCount = 89 },
        new Category { Id = 4, Name = "Home & Garden", Description = "Home improvement and garden supplies", IconUrl = "https://via.placeholder.com/64", ProductCount = 167 },
        new Category { Id = 5, Name = "Sports & Outdoors", Description = "Sports equipment and outdoor gear", IconUrl = "https://via.placeholder.com/64", ProductCount = 123 },
        new Category { Id = 6, Name = "Toys & Games", Description = "Toys, games, and hobbies", IconUrl = "https://via.placeholder.com/64", ProductCount = 201 }
    };

    private string searchQuery = "";
    
    private bool showCategoryModal = false;
    private bool showDeleteConfirm = false;
    private bool isEditMode = false;
    
    private Category currentCategory = new();
    private Category? categoryToDelete;

    private IEnumerable<Category> FilteredCategories => categories
    .Where(c => string.IsNullOrEmpty(searchQuery) || 
      c.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
          c.Description.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));

    private void OpenAddCategoryModal()
    {
        isEditMode = false;
    currentCategory = new Category();
        showCategoryModal = true;
    }

    private void EditCategory(Category category)
    {
  isEditMode = true;
        currentCategory = new Category
        {
        Id = category.Id,
  Name = category.Name,
  Description = category.Description,
            IconUrl = category.IconUrl,
       ProductCount = category.ProductCount
        };
        showCategoryModal = true;
    }

    private void ConfirmDeleteCategory(Category category)
    {
        categoryToDelete = category;
        showDeleteConfirm = true;
    }

    private async Task HandleDeleteConfirm(bool confirmed)
    {
   if (confirmed && categoryToDelete != null)
        {
          // TODO: Call API to delete category
            categories.Remove(categoryToDelete);
            categoryToDelete = null;
        }
        showDeleteConfirm = false;
    }

    private void SaveCategory()
    {
        if (isEditMode)
        {
  var existingCategory = categories.FirstOrDefault(c => c.Id == currentCategory.Id);
   if (existingCategory != null)
            {
         existingCategory.Name = currentCategory.Name;
 existingCategory.Description = currentCategory.Description;
    existingCategory.IconUrl = currentCategory.IconUrl;
   }
        }
        else
        {
   currentCategory.Id = categories.Max(c => c.Id) + 1;
       currentCategory.ProductCount = 0;
       categories.Add(currentCategory);
}

        CloseCategoryModal();
    }

    private void CloseCategoryModal()
    {
        showCategoryModal = false;
        currentCategory = new();
    }
}

