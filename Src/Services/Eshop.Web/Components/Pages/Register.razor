@page "/register"
@using Eshop.Web.Models
@using Eshop.Web.Services
@using Microsoft.AspNetCore.Components.Forms
@inject ToastService ToastService
@inject NavigationManager Navigation

<PageTitle>إنشاء حساب - متجر البراء</PageTitle>

<div class="register-container">
    <div class="register-card">
        <div class="register-header">
   <div class="register-icon">
       <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
         <circle cx="12" cy="7" r="4"/>
       </svg>
      </div>
   <h2>إنشاء حساب جديد</h2>
      <p>انضم إلينا وابدأ التسوق</p>
  </div>

        <EditForm Model="@registerModel" OnValidSubmit="@HandleRegister">
 <DataAnnotationsValidator />

   @if (!string.IsNullOrEmpty(errorMessage))
    {
       <div class="alert alert-danger">
    <svg class="alert-icon" viewBox="0 0 20 20" fill="currentColor">
   <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
           </svg>
        @errorMessage
      </div>
         }

            @if (registrationSuccess)
    {
       <div class="alert alert-success">
      <svg class="alert-icon" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
     تم التسجيل بنجاح! جاري التحويل لتسجيل الدخول...
    </div>
      }

          <div class="form-group">
      <label for="fullname">الاسم الكامل</label>
      <InputText id="fullname" class="form-control" @bind-Value="registerModel.FullName" placeholder="أدخل اسمك الكامل" />
      <ValidationMessage For="@(() => registerModel.FullName)" />
</div>

            <div class="form-group">
       <label for="email">البريد الإلكتروني</label>
      <InputText id="email" type="email" class="form-control" @bind-Value="registerModel.Email" placeholder="أدخل بريدك الإلكتروني" />
       <ValidationMessage For="@(() => registerModel.Email)" />
       </div>

    <div class="form-group">
      <label for="password">كلمة المرور</label>
 <InputText id="password" type="password" class="form-control" @bind-Value="registerModel.Password" placeholder="أنشئ كلمة مرور قوية" />
   <ValidationMessage For="@(() => registerModel.Password)" />
  <div class="password-strength">
      <div class="strength-bar">
    <div class="strength-fill @GetPasswordStrength()"></div>
     </div>
  <span class="strength-text">@GetPasswordStrengthText()</span>
   </div>
  </div>

      <div class="form-group">
       <label for="confirmPassword">تأكيد كلمة المرور</label>
 <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="registerModel.ConfirmPassword" placeholder="أعد إدخال كلمة المرور" />
   <ValidationMessage For="@(() => registerModel.ConfirmPassword)" />
 </div>

 <div class="form-group">
        <label class="checkbox-label">
  <InputCheckbox @bind-Value="registerModel.AcceptTerms" />
   <span>أوافق على <a href="/terms" class="link">شروط الخدمة</a> و <a href="/privacy" class="link">سياسة الخصوصية</a></span>
 </label>
   <ValidationMessage For="@(() => registerModel.AcceptTerms)" />
      </div>

   <button type="submit" class="btn btn-primary btn-block" disabled="@isLoading">
     @if (isLoading)
    {
     <span class="spinner"></span>
          <span>جاري إنشاء الحساب...</span>
     }
    else
      {
     <span>إنشاء حساب</span>
   }
       </button>
    </EditForm>

   <div class="register-footer">
  <p>لديك حساب بالفعل؟ <a href="/login" class="link-primary">سجل دخولك</a></p>
    </div>

   <div class="divider">
   <span>أو سجل بواسطة</span>
  </div>

   <div class="social-register">
    <button class="btn btn-social" @onclick="RegisterWithGoogle">
    <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor">
    <path d="M12.48 10.92v3.28h7.84c-.24 1.84-.853 3.187-1.787 4.133-1.147 1.147-2.933 2.4-6.053 2.4-4.827 0-8.6-3.893-8.6-8.72s3.773-8.72 8.6-8.72c2.6 0 4.507 1.027 5.907 2.347l2.307-2.307C18.747 1.44 16.133 0 12.48 0 5.867 0 .307 5.387.307 12s5.56 12 12.173 12c3.573 0 6.267-1.173 8.373-3.36 2.16-2.16 2.84-5.213 2.84-7.667 0-.76-.053-1.467-.173-2.053H12.48z"/>
       </svg>
 Google
        </button>
       <button class="btn btn-social" @onclick="RegisterWithMicrosoft">
       <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor">
       <path d="M11.4 24H0V12.6h11.4V24zM24 24H12.6V12.6H24V24zM11.4 11.4H0V0h11.4v11.4zm12.6 0H12.6V0H24v11.4z"/>
        </svg>
   Microsoft
        </button>
  </div>
  </div>
</div>

@code {
    private RegisterRequest registerModel = new();
    private bool isLoading = false;
    private bool registrationSuccess = false;
    private string errorMessage = string.Empty;

    private async Task HandleRegister()
    {
        isLoading = true;
     errorMessage = string.Empty;
  
        try
   {
   // Validate input
   if (!registerModel.AcceptTerms)
     {
          errorMessage = "يجب الموافقة على الشروط والأحكام";
    ToastService.ShowWarning(errorMessage);
     return;
     }

      if (registerModel.Password != registerModel.ConfirmPassword)
  {
          errorMessage = "كلمة المرور غير متطابقة";
        ToastService.ShowError(errorMessage);
       return;
       }

     await Task.Delay(2000);
       
          // TODO: Call authentication service
       // For now, show success
  registrationSuccess = true;
 ToastService.ShowSuccess("تم التسجيل بنجاح! جاري التحويل...");
          await Task.Delay(1500);
       Navigation.NavigateTo("/login");
  }
   catch (Exception ex)
 {
     errorMessage = "فشل التسجيل. يرجى المحاولة مرة أخرى.";
            ToastService.ShowError(errorMessage);
     }
        finally
  {
      isLoading = false;
        }
    }

    private string GetPasswordStrength()
    {
 if (string.IsNullOrEmpty(registerModel.Password))
            return "strength-weak";
 
   var score = 0;
        if (registerModel.Password.Length >= 8) score++;
  if (registerModel.Password.Any(char.IsUpper)) score++;
        if (registerModel.Password.Any(char.IsLower)) score++;
if (registerModel.Password.Any(char.IsDigit)) score++;
 if (registerModel.Password.Any(c => !char.IsLetterOrDigit(c))) score++;

        return score switch
        {
          <= 2 => "strength-weak",
      3 => "strength-medium",
  _ => "strength-strong"
        };
    }

    private string GetPasswordStrengthText()
    {
        if (string.IsNullOrEmpty(registerModel.Password))
      return "أدخل كلمة مرور";
  
        var strength = GetPasswordStrength();
    return strength switch
        {
 "strength-weak" => "كلمة مرور ضعيفة",
            "strength-medium" => "كلمة مرور متوسطة",
    "strength-strong" => "كلمة مرور قوية",
         _ => ""
     };
    }

    private async Task RegisterWithGoogle()
    {
        ToastService.ShowInfo("التسجيل بواسطة Google قريباً");
     await Task.CompletedTask;
    }

    private async Task RegisterWithMicrosoft()
  {
     ToastService.ShowInfo("التسجيل بواسطة Microsoft قريباً");
        await Task.CompletedTask;
    }
}

